<!DOCTYPE html>
<html lang="zh-TW">
<head>
  <meta charset="UTF-8">
  <title>木魚動畫</title>
  <style>
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      background: #fff8e7;
      font-family: "Microsoft JhengHei", sans-serif;
    }

    .container {
      position: relative;
      width: 300px;
      height: 200px;
    }

    .muyu {
      width: 150px;
      height: 120px;
      background: #dcae74;
      border-radius: 50% / 40%;
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      box-shadow: inset -10px -10px #b07d4f;
      cursor: pointer;
    }

    .muyu::before {
      content: "";
      width: 60px;
      height: 15px;
      background: #b07d4f;
      border-radius: 10px;
      position: absolute;
      top: 40%;
      left: 30%;
    }

    .counter {
      margin-top: 20px;
      font-size: 24px;
      font-weight: bold;
      color: #444;
    }

    .hit {
      animation: shake 0.15s;
    }

    @keyframes shake {
      0% { transform: translateX(-50%) rotate(0deg); }
      50% { transform: translateX(-50%) rotate(5deg); }
      100% { transform: translateX(-50%) rotate(0deg); }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="muyu" id="muyu"></div>
  </div>
  <div class="counter" id="counter">功德: 0</div>

  <audio id="sound" src="https://cdn.pixabay.com/download/audio/2022/03/15/audio_4c029e2f74.mp3?filename=wood-block-hit-100bpm-14095.mp3"></audio>

  <script>
    let count = 0;
    const muyu = document.getElementById("muyu");
    const counter = document.getElementById("counter");
    const sound = document.getElementById("sound");

    muyu.addEventListener("click", () => {
      // 木魚晃動
      muyu.classList.add("hit");
      setTimeout(() => muyu.classList.remove("hit"), 150);

      // 播放聲音
      sound.currentTime = 0;
      sound.play();

      // 功德 -1
      count--;
      counter.textContent = "功德: " + count;
    });
  </script>
</body>
</html>
